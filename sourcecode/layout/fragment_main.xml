<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/hello" />

        <Button
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickNext1"
            android:textColor="#ffd18161"
            android:textSize="25sp"
            android:text="What is SWOT"
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickNext2"
            android:textColor="#ff45d16d"
            android:textSize="25sp"
            android:text="When to Use SWOT" />
        <Button
            android:id="@+id/button3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickNext3"
            android:textColor="#ffcdced1"
            android:textSize="25sp"
            android:text="How to use SWOT" />
        <Button
            android:id="@+id/button4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickNext4"
            android:textColor="#ffc76699"
            android:textSize="25sp"
            android:text="Analysis" />

        <Button
            android:id="@+id/button5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickNext1"
            android:textColor="#ffcf89d1"
            android:textSize="25sp"
            android:text="reports" />
        <Button
            android:id="@+id/button6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickNext6"
            android:textColor="#ffd119cc"
            android:textSize="25sp"
            android:text="Mentoring  " />
        <Button
            android:id="@+id/button7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickNext1"
            android:textColor="#0288D1"
            android:textSize="25sp"
            android:text="Action plan and implementation" />



    </LinearLayout>
</RelativeLayout>
